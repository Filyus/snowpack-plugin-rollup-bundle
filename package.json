{
  "name": "snowpack-plugin-rollup-bundle",
  "description": "A snowpack plugin to use Rollup as a bundler",
  "homepage": "https://github.com/ParamagicDev/snowpack-plugin-rollup-bundle",
  "bugs": {
    "url": "https://github.com/ParamagicDev/snowpack-plugin-rollup-bundle/issues",
    "email": "konnor7414@gmail.com"
  },
  "engines": {
    "node": ">= 10"
  },
  "author": "Konnor Rogers <konnor7414@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ParamagicDev/snowpack-plugin-rollup-bundle.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./{__tests__,src}/**/* --quiet && prettier ./{__tests__,src}/**/* --check",
    "format": "eslint --fix ./{__tests__,src}/**/* && prettier --write ./{__tests__,src}/**/*",
    "build": "yarn format && pika build",
    "test": "yarn build && yarn test:ci",
    "test:ci": "uvu -r esm __tests__ -i example_dir -i cypress",
    "test:watch": "watchlist src __tests__ -- yarn test",
    "test:all": "yarn build && yarn test:ci && yarn cy:test:ci",
    "dev": "cd __tests__/example_dir && yarn snowpack dev --port 4000",
    "serve": "cd __tests__/example_dir && yarn build && yarn servor build index.html 4000",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:test": "yarn build && yarn:test:ci",
    "cy:test:dev:ci": "start-server-and-test 'yarn dev' http-get://localhost:4000 'yarn cy:open'",
    "cy:test:dev": "yarn build && yarn:test:dev:ci",
    "cy:test:build:ci": "start-server-and-test 'yarn serve' http-get://localhost:4000 'yarn cy:open'",
    "cy:test:build": "yarn build && yarn:test:build:ci",
    "cy:test:ci": "yarn test:dev:ci && yarn test:build:ci",
    "deploy": "pika publish",
    "version": "yarn run build"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "peerDependencies": {
    "glob": "^7.1.4",
    "rollup": "^2.26.4",
    "snowpack": "^2.8.0"
  },
  "dependencies": {
    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@testing-library/cypress": "^7.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-styles": "^3.10.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "babel-jest": "^26.3.0",
    "cypress": "^5.1.0",
    "eslint": "^7.7.0",
    "esm": "^3.2.25",
    "prettier": "^2.0.5",
    "start-server-and-test": "^1.11.3",
    "uvu": "^0.3.3",
    "watchlist": "^0.2.3"
  },
  "version": "0.0.4"
}
