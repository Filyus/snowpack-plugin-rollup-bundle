{
  "name": "snowpack-plugin-rollup-bundle",
  "description": "A snowpack plugin to use Rollup as a bundler",
  "homepage": "https://github.com/ParamagicDev/snowpack-plugin-rollup-bundle",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js",
      "default": "./dist/index.esm.js"
    }
  },
  "bugs": {
    "url": "https://github.com/ParamagicDev/snowpack-plugin-rollup-bundle/issues",
    "email": "konnor7414@gmail.com"
  },
  "engines": {
    "node": ">= 10"
  },
  "author": "Konnor Rogers <konnor7414@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ParamagicDev/snowpack-plugin-rollup-bundle.git"
  },
  "license": "MIT",
  "scripts": {
    "lint:eslint": "eslint ./{__tests__,src}/**/*.{ts,js}",
    "format:eslint": "eslint --fix ./{__tests__,src}/**/*.{ts,js}",
    "lint:prettier": "prettier ./{__tests__,src}/**/*.{ts,js} --check",
    "format:prettier": "prettier --write ./{__tests__,src}/**/*.{ts,js}",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "format": "yarn format:prettier && yarn format:eslint",
    "build": "yarn format && yarn tsc",
    "build:watch": "yarn format && yarn tsc --watch",
    "test": "mocha -r esm  \"__tests__/**/*.test.{ts,js}\"",
    "test:watch": "mocha -r esm -r ts-node \"__tests__/**/*.test.{ts,js}\" --watch",
    "dev": "cd __tests__/examples/example_dir && yarn build && yarn snowpack dev --port 4000",
    "serve": "cd __tests__/examples/example_dir && yarn build && yarn servor build index.html 4000",
    "deploy": "yarn publish",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md && git commit -m 'docs: update CHANGELOG.md'",
    "version": "yarn changelog && yarn build"
  },
  "peerDependencies": {
    "rollup": ">= 2.0.0",
    "snowpack": ">= 2.7.0"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "glob": "^7.1.6",
    "jsdom": "^16.4.0",
    "rollup-plugin-styles": "^3.10.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^7.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "mocha": "^8.2.1",
    "np": "^6.5.0",
    "prettier": "^2.0.5",
    "rollup": "^2.32.0",
    "snowpack": "^2.11.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "version": "0.3.3"
}
