{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
