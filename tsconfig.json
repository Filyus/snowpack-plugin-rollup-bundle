{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "types": [
      "node", "chai", "mocha"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist", "./__tests__"]
}
